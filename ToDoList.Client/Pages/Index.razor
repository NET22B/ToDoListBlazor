@page "/"

<h1>@text</h1>

<PageTitle>Index</PageTitle>

<AddItem @bind-Text="text"></AddItem>

<Items ToDoItems="items"></Items>

@code{
    private string text = "Hej";

    private IEnumerable<Item> items = new List<Item>();

    [Inject]
    public IToDoClient ToDoClient { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        items = await ToDoClient.GetAsync();
    }

}