<div class="border-bottom bg-white">
    <EditForm Model="@Model" id="todoForm" class="py-4 container">
        <div class="input-group input-group-lg">
            <InputText @bind-Value="text" type="text" class="form-control" placeholder="Add todo..." autofocus></InputText>
            <div class="input-group-append input-group-lg">
                <button @onclick="OnAdd" @onclick:preventDefault="true" type="submit" class="btn btn-info">ADD</button>
            </div>
        </div>
    </EditForm>
</div>


@code {

    private string text = string.Empty;
    private string Model = string.Empty;

    [Parameter]
    public EventCallback<string> Add { get; set; }

    public async Task OnAdd()
    {
        await Add.InvokeAsync(text);
        text = string.Empty;
    }
}
